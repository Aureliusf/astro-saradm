---
import MainLayout from '../layouts/main.astro';
import Footer from '../components/Footer.astro';
---
<MainLayout title="Contacto">
  <main class="container mx-auto min-h-screen max-w-3xl px-4 md:px-8 pt-2 md:pt-4 pb-4 md:pb-8 flex flex-col items-center">
    <h1 class="text-center text-4xl md:text-6xl font-bold mb-8">Cont√°ctame</h1>

       <!-- Contact Form -->
    <form class="text-3xl md:text-4xl space-y-6" onsubmit="handleSubmit(event)">
      <!-- Name Field -->
      <div>
        <label for="name" class="text-3xl md:text-4xl block font-medium mb-2" style="color: #a48374;">
          Name 
        </label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-4 py-3 rounded-lg border-2 border-gray-400 bg-gray-900 text-white transition-all duration-300"
          style="background-color: #f1ede6; color: #000;"
        />
      </div>

      <!-- Email Field -->
      <div>
        <label for="email" class="block text-3xl md:text-4xl font-medium mb-2" style="color: #a48374;">
          Email Address
        </label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-4 py-3 rounded-lg border-2 border-gray-400 bg-gray-900 text-white transition-all duration-300"
          style="background-color: #f1ede6; color: #000;"
        />
      </div>

      <!-- Message Field -->
      <div>
        <label for="message" class="block text-3xl md:text-4xl font-medium mb-2" style="color: #a48374;">
          Message
        </label>
        <textarea
          id="message"
          name="message"
          rows="6"
          required
          class="w-full px-4 py-3 rounded-lg border-2 border-gray-400 bg-gray-900 text-white transition-all duration-300 resize-none"
          style="background-color: #f1ede6; color: #000;"
        ></textarea>
      </div>

      <!-- Submit Button -->
      <div>
        <button
          type="submit"
          class="btn-hover px-8 py-3 rounded-full font-medium transition-all duration-300"
          style="background-color: #a48374; color: #f1ede6;"
        >
          Submit
        </button>
      </div>
    </form>

  </main>
</MainLayout>
<Footer />
