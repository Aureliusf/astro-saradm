---
import MainLayout from '../layouts/main.astro';
import Footer from '../components/Footer.astro';
---
<MainLayout title="Contacto">
  <main class="container mx-auto min-h-screen max-w-3xl p-4 md:p-8 flex flex-col items-center">
    <h1 class="text-center text-4xl md:text-5xl font-bold mb-8">Cont√°ctame</h1>

    <form name="contact" method="POST" data-netlify="true" class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
      <input type="hidden" name="form-name" value="contact" />
      <div class="space-y-6">
        <div class="grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-8">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
            <div class="mt-1">
              <input type="text" id="name" name="name" required autocomplete="name" class="block w-full rounded-md border-gray-500 shadow-lg focus:border-[#a48374] focus:ring-[#a48374] sm:text-sm" />
            </div>
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <div class="mt-1">
              <input type="email" id="email" name="email" required autocomplete="email" class="block w-full rounded-md border-gray-500 shadow-lg focus:border-[#a48374] focus:ring-[#a48374] sm:text-sm" />
            </div>
          </div>
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
          <div class="mt-1">
            <textarea id="message" name="message" rows="4" required class="block w-full rounded-md border-gray-500 shadow-lg focus:border-[#a48374] focus:ring-[#a48374] sm:text-sm"></textarea>
          </div>
        </div>
        <div class="flex justify-end">
          <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-[#a48374] py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-[#8a6f62] focus:outline-none focus:ring-2 focus:ring-[#a48374] focus:ring-offset-2">
            Enviar
          </button>
        </div>
      </div>
    </form>
  </main>
</MainLayout>
<Footer />
