---
export const prerender = true;

import type { SanityDocument } from "@sanity/client";
import { sanityClient } from "sanity:client";
import { PortableText } from "astro-portabletext";
import imageUrlBuilder from '@sanity/image-url';

import MainLayout from '../layouts/main.astro';
import Footer from '../components/Footer.astro';


const builder = imageUrlBuilder(sanityClient);

function urlFor(source: any) {
  return builder.image(source);
}

function generateImageProps(image: any, sizes: string) {
  const base = urlFor(image).quality(90).auto('format');
  return {
    src: base.width(800).url(),
    srcset: [400, 800, 1200, 1600, 2000]
      .map(w => `${base.width(w).url()} ${w}w`)
      .join(', '),
    sizes: sizes,
  };
}

const QUERY = `*[_type == "home"][0] {
  ...,
  topProjects[]->{
    title,
    subtitle,
    slug,
    cover,
    body
  }
}`;

const content = await sanityClient.fetch<SanityDocument>(QUERY);
const imageProps = content ? generateImageProps(content.cover.asset, '(min-width: 512px) 512px, calc(100vw - 2rem)') : null;
---
<MainLayout title={content?.title}>
  <main class="flex flex-col container mx-auto min-h-screen  px-4 md:px-8 pt-2 md:pt-4 pb-4 md:pb-8">
    {content ? (
      <>
          <h1 class=" text-[#541409] font-bold text-center text-4xl md:text-5xl mb-8 " style="font-family: 'Nanum Myeongjo', serif;">
            {content.title}
          </h1>
          <h2 class="text-[#541409] opacity-60 text-center text-2xl md:text-2xl mb-8 ">
            {content.subtitle}
          </h2>

          <div class="flex flex-col md:flex-row items-center md:items-center gap-4">
            <div class="w-full md:w-1/2 max-w-lg mx-auto md:mx-0">
              {imageProps && <img
                src={imageProps.src}
                srcset={imageProps.srcset}
                sizes={imageProps.sizes}
                alt={content.title || ""} 
                class="w-full aspect-auto object-cover overflow-hidden shadow-lg" 
                loading="lazy"
                decoding="async"
              />}
            </div>

            <div class="w-full md:w-1/2 mt-6 mb-3 md:mt-0 md:mb-0">
              <div class="text-xl md:text-2xl md:ml-4 text-center text-[#220d0c] rounded-lg p-4">
                <p>
                {Array.isArray(content.shortDescription) && <PortableText value={content.shortDescription} />}
                </p>
              </div>
            </div>
        </div>
        <div class="mx-auto w-full md:w-1/3 md:mt-40 md:mb-10 mt-6 mb-6">
          <h2 class="text-3xl md:text-4xl mt-3 mb-2 md:mt-0 text-center text-[#541409] font-bold">Proyectos Destacados</h2>
        </div>

        <ul class="flex flex-col gap-y-4"> 
          {content.topProjects.map((post, index) => {
            const imageProps = generateImageProps(post.cover.image, '(min-width: 768px) 250px, calc(100vw - 2rem)');
            return (
              <li class="group">
                <a href={`/${post.slug.current}`} 
                  class={`flex flex-col md:flex-row items-center gap-2 ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}
                >
                  <div class="w-full md:w-1/2">
                    <img
                      src={imageProps.src}
                      srcset={imageProps.srcset}
                      sizes={imageProps.sizes}
                      alt={post.cover.alt || post.title || ""}
                      class="w-full aspect-square object-cover shadow-lg overflow-hidden"
                      loading="lazy"
                      decoding="async"
                    />
                  </div>
                  <div
                    class:list={[
                      "w-full",
                      "md:w-2/3",
                      "text-center",
                      index % 2 === 1 ? "md:mr-6 md:text-right" : "md:ml-6 md:text-left",
                    ]}
                  >
                    <h2 class="text-[#220d0c] text-2xl md:text-2xl group-hover:underline mt-4 md:mt-0 md:mr-1 md:ml-1">{post.title}</h2>
                    <div class=" text-center mt-2">
                      {Array.isArray(post.body) && <PortableText value={post.body} />}
                    </div>
                  </div>
                </a>
              </li>
            )
          })}
          <a href="/posts" class="w-fit mx-auto bg-[#220d0c] text-white rounded-lg px-4 py-2 text-xl md:text-3xl">Todos Mis Proyectos</a>
        </ul>
      </>
    ) : (
      <h1 class="text-4xl font-bold mb-8">No content found</h1>
    )}
  </main>
</MainLayout>
<Footer />
