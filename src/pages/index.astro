---
export const prerender = true;

import type { SanityDocument } from "@sanity/client";
import { sanityClient } from "sanity:client";
import { PortableText } from "astro-portabletext";
import imageUrlBuilder from '@sanity/image-url';

import MainLayout from '../layouts/main.astro';
import Footer from '../components/Footer.astro';
import { Masonry } from 'astro-masonry';
import BulletList from '../components/portabletext/BulletList.astro';

const portableTextComponents = {
  list: {
    bullet: BulletList,
  },
};

const builder = imageUrlBuilder(sanityClient);

function urlFor(source: any) {
  return builder.image(source);
}

function generateImageProps(image: any, sizes: string) {
  const base = urlFor(image).quality(90).auto('format');
  return {
    src: base.width(800).url(),
    srcset: [800, 1200, 1600, 2000]
      .map(w => `${base.width(w).url()} ${w}w`)
      .join(', '),
    sizes: sizes,
  };
}

const QUERY = `*[_type == "home"][0] {
  ...,
  studiesAndCertificates,
  services,
  hardSkills,
  brandsWorkedWith[]{ nombre, logo{ image, alt } },
  topProjects[]->{
    title,
    slug,
    cover,
    highlights
  }
}`;

const content = await sanityClient.fetch<SanityDocument>(QUERY);
const imageProps = content && content.cover && content.cover.image ? generateImageProps(content.cover.image, '(min-width: 512px) 512px, calc(100vw - 2rem)') : null;
---
<MainLayout title={content?.title}>
  <main class="flex flex-col container mx-auto min-h-screen md:px-6 pt-2 md:pt-4 pb-2 md:pb-4">
    {content ? (
      <>
      <!-- About me Section -->
          <h1 class="mb-2 md:mb-2">
            {content.title}
          </h1>
          <h2 class="text-[#541409] opacity-80 text-center text-2xl md:text-2xl mb-8 ">
            {content.subtitle}
          </h2>

          <div class="flex flex-col md:flex-row items-center md:items-center gap-4">
            <div class="w-full md:w-1/2 max-w-lg mx-auto md:mx-0">
              {imageProps && <img
                src={imageProps.src}
                srcset={imageProps.srcset}
                sizes={imageProps.sizes}
                alt={content.title || ""} 
                class="w-full aspect-auto object-cover overflow-hidden shadow-lg" 
                loading="lazy"
                decoding="async"
              />}
            </div>

            <div class="w-full md:w-1/2 mt-6 mb-3 md:mt-0 md:mb-0">
              <div class="text-xl md:text-2xl md:ml-4 text-center mb-3 md:mb-4 text-[#220d0c] rounded-lg p-4 ">
                <p>
                {Array.isArray(content.shortDescription) && <PortableText value={content.shortDescription} />}
                </p>
              </div>
              <div class="text-xl md:textl md:ml-4 text-left text-[#220d0c] rounded-lg p-4 shadow-2xl">
              <h2 class="title-font text-[#541409] font-bold text-center text-2xl md:text-3xl mb-3">Servicios Disponibles</h2>
                <div class="grid grid-cols-5">
                  <div class="col-span-1"></div>
                  <div class="col-span-3">
                    {Array.isArray(content.services) && <PortableText value={content.services} components={portableTextComponents} />}
                  </div>
                  <div class="col-span-1"></div>
                </div>
              </div>
            </div>
        </div>
      <!-- Qualifications Section -->
      <div class="mt-12 mb-12">
        <h2 class="main-title-font text-3xl md:text-4xl text-center text-[#541409] font-bold mb-8">Mis Cualificaciones</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Column 1: Studies and Certificates -->
          <div class="flex flex-col items-center text-center p-4 shadow-lg rounded-lg">
            <h3 class="opacity-80">Estudios y Certificaciones</h3>
            <div class="text-xl md:text-xl text-[#220d0c]">
              {Array.isArray(content.studiesAndCertificates) && <PortableText value={content.studiesAndCertificates} />}
            </div>
          </div>

          <!-- Column 2: Hard Skills -->
          <div class="flex flex-col items-center text-center p-4 shadow-lg rounded-lg">
            <h3 class="opacity-80">Habilidades t√©cnicas</h3>
            <div class="prose prose-xl text-left">
              {Array.isArray(content.hardSkills) && <PortableText value={content.hardSkills} components={portableTextComponents} />}
            </div>
          </div>

          <!-- Column 3: Brands Worked With -->
          <div class="flex flex-col items-center text-center p-4 shadow-lg rounded-lg">
            <h3 class="opacity-80">Marcas que han confiado en mi</h3>
            <div class="text-xl md:text-2xl text-[#220d0c]">
              {content.brandsWorkedWith && content.brandsWorkedWith.length > 0 && (
                <Masonry breakAt={{ 0: 2, 640: 3 }} gap={8}> {/* 2 cols mobile, 3 cols desktop for brands */}
                  {content.brandsWorkedWith.map((brand: { nombre: string; logo: { image: any; alt: string } }) => {
                    const hasLogo = brand.logo && brand.logo.image; // Check if logo image is available

                    return (
                      <div class="flex flex-col items-center justify-center p-2">
                        {hasLogo ? ( // If logo is available, render the image
                          <>
                            {(() => { // Using an IIFE to generate props inside JSX
                              const brandLogoProps = generateImageProps(brand.logo.image, '60px');
                              return (
                                <img
                                  src={brandLogoProps.src}
                                  srcset={brandLogoProps.srcset}
                                  sizes="60px"
                                  alt={brand.logo.alt || brand.nombre || ""}
                                  class="h-12 w-auto object-contain mb-1"
                                  loading="lazy"
                                  decoding="async"
                                />
                              );
                            })()}
                          </>
                        ) : ( // If no logo, just display the name, perhaps with some padding
                          <span class="text-lg text-center p-4">{brand.nombre}</span>
                        )}
                      </div>
                    );
                  })}
                </Masonry>
              )}
            </div>
          </div>
        </div>
      </div>

      <!-- Top Projects Section -->
        <div class="mx-auto w-full md:w-1/3 md:mt-10 md:mb-10 mt-6 mb-6">
          <h2 class="main-title-font text-3xl md:text-4xl mt-3 mb-2 md:mt-0 text-center text-[#541409] font-bold">Proyectos Destacados</h2>
        </div>

        <ul class="flex flex-col gap-y-4"> 
          {content.topProjects.map((post, index) => {
            const imageProps = generateImageProps(post.cover.image, '(min-width: 768px) 250px, calc(100vw - 2rem)');
            return (
              <li class="group">
                <a href={`/${post.slug.current}`} 
                  class={`flex flex-col md:flex-row items-center gap-2 ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}
                >
                  <div class="w-full md:w-1/2">
                    <img
                      src={imageProps.src}
                      srcset={imageProps.srcset}
                      sizes={imageProps.sizes}
                      alt={post.cover.alt || post.title || ""}
                      class="w-full aspect-square object-cover shadow-lg overflow-hidden"
                      loading="lazy"
                      decoding="async"
                    />
                  </div>
                  <div
                    class:list={[
                      "w-full",
                      "md:w-2/3",
                      "text-center",
                      index % 2 === 1 ? "md:mr-6 md:text-right" : "md:ml-6 md:text-left",
                    ]}
                  >
                    <h2 class=" title-font text-[#220d0c] text-2xl md:text-3xl group-hover:underline mt-4 md:mt-0 md:mr-1 md:ml-1">{post.title}</h2>
                    <div class=" text-center mt-2">
                      {Array.isArray(post.highlights) && <PortableText value={post.highlights} />}
                    </div>
                  </div>
                </a>
              </li>
            )
          })}
          <a href="/posts" class=" main-title-font w-fit mx-auto bg-[#220d0c] text-white rounded-lg px-4 py-2 text-xl md:text-3xl">Todos Mis Proyectos</a>
        </ul>
      </>
    ) : (
      <h1 class="text-4xl font-bold mb-8">No content found</h1>
    )}
  </main>
</MainLayout>
<Footer />
