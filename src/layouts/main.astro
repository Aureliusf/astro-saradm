---
import '../styles/global.css';
import Header from '../components/Header.astro';

interface Props {
	title?: string;
}

const { title = 'My Astro Site' } = Astro.props;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,opsz,wght@1,6..96,600&family=Cormorant+Garamond:wght@500&family=Lato:wght@100;300;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
